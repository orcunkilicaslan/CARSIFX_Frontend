{% extends "layouts/base.twig" %}

{% block page_content %}

    {% set showPhone = false %}

    <section class="content-slider slider-small">
        <div class="slider-image"
             style="background:url('./images/login_banner.png') no-repeat; margin-top: -4px;"></div>
    </section>

    <section class="page-form-container">

        <div class="container">

            <div class="row">

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

                    <div class="form-block-container">

                        <div class="side">

                            <div class="form-container">



                                <form method="post" action="?" id="siteForm">
                                    <div class="form-row">
                                        <div class="col-lg-8 offset-lg-4">
                                            <h2 class="form-title">Gerçek Hesap Aç</h2>
                                        </div>
                                    </div>

                                    <div class="alert alert-danger">
                                        <span>Hesap açarken bir sorun oluştu:</span>
                                        <ul>
                                            <li>E-Posta adresi sisteme kayıtlı</li>
                                            <li>Bilinmeyen başka bir hata</li>
                                        </ul>
                                    </div>

                                    <div class="form-row">
                                        <div class="col-lg-4">
                                            <span class="required">*</span>
                                            İsim
                                        </div>
                                        <div class="col-lg-8 less-padding">
                                            <input
                                                    placeholder="İsim Soyisim"
                                                    type="text" class="form-control js-form-control"
                                                    data-required="true"
                                                    data-min="5"
                                                    name="nameSurname"
                                            />
                                        </div>
                                    </div>

                                    <div class="form-row">
                                        <div class="col-lg-4">
                                            <span class="required">*</span>
                                            Doğum Tarihi
                                        </div>
                                        <div class="col-lg-8">

                                            <div class="row">
                                                <div class="col-lg-4 less-padding">
                                                    <input
                                                            name="birthDay"
                                                            placeholder="Gün"
                                                            type="text"
                                                            data-required="true"
                                                            data-min="1"
                                                            data-short-error-message="true"
                                                            class="form-control js-form-control"
                                                    />
                                                </div>

                                                <div class="col-lg-4 less-padding">
                                                    <input
                                                            name="birthMonth"
                                                            placeholder="Ay"
                                                            type="text"
                                                            data-required="true"
                                                            data-min="1"
                                                            data-short-error-message="true"
                                                            class="form-control js-form-control"
                                                    />
                                                </div>

                                                <div class="col-lg-4 less-padding">
                                                    <input
                                                            name="birthYear"
                                                            placeholder="Yıl"
                                                            type="text"
                                                            data-required="true"
                                                            data-min="1"
                                                            data-short-error-message="true"
                                                            class="form-control js-form-control"
                                                    />
                                                </div>
                                            </div>

                                        </div>
                                    </div>

                                    <div class="form-row">
                                        <div class="col-lg-4">
                                            <span class="required">*</span>
                                            E-Posta
                                        </div>
                                        <div class="col-lg-8">
                                            <input type="email"
                                                   name="email"
                                                   placeholder="E-mail"
                                                   data-required="true"
                                                   data-validation="email"
                                                   class="form-control js-form-control"/>
                                        </div>
                                    </div>

                                    <div class="form-row">
                                        <div class="col-lg-4">
                                            <span class="required">*</span>
                                            Telefon
                                        </div>
                                        <div class="col-lg-8">
                                            <input
                                                    name="phone"
                                                    placeholder="05XXXXXXXX"
                                                    maxlength="11"
                                                    type="tel" data-required="true"
                                                    class="form-control js-form-control"/>
                                        </div>
                                    </div>

                                    <div class="form-row">
                                        <div class="col-lg-4">
                                            <span class="required">*</span>
                                            Şifre
                                        </div>
                                        <div class="col-lg-8">
                                            <input
                                                    name="password"
                                                    placeholder="Şifre"
                                                    data-min="8"
                                                    data-max="16"
                                                    data-required="true"
                                                    data-same-as="#passwordConfirm"
                                                    type="password"
                                                    class="form-control js-form-control"
                                                    minlength="8"
                                                    maxlength="16"
                                                    id="formPassword"/>
                                        </div>
                                    </div>

                                    <div class="form-row">
                                        <div class="col-lg-4">
                                            <span class="required">*</span>
                                            Şifre Tekrarı
                                        </div>
                                        <div class="col-lg-8">
                                            <input
                                                    name="passwordConfirm"
                                                    placeholder="Şifre Tekrarı"
                                                    data-required="true"
                                                    type="password" class="form-control js-form-control"
                                                    id="passwordConfirm"/>
                                        </div>
                                    </div>

                                    <div class="form-row">
                                        <div class="col-lg-12">
                                            <div class="form-group form-check">
                                                <input type="checkbox" class="form-check-input js-form-control"
                                                       id="exampleCheck1" data-required="true">
                                                <label class="form-check-label" for="exampleCheck1">Çarşı FX’den
                                                    elektronik ileti almayı, kullanım koşullarını, kişisel verilerin
                                                    işlenmesine ilişkin aydınlatma metni ve izin Formu’nu kabul
                                                    ediyorum.</label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-row">
                                        <div class="col-lg-6">
                                            <div class="form-group form-check">
                                                <!--
                                                <div class="g-recaptcha" data-sitekey="6LcmlLUZAAAAAE3UFNQ3K5mxvUHMsekb495Wyzkh"></div>
                                                -->
                                                <input type="checkbox" class="form-check-input" id="notRobotCheck">
                                                <label class="form-check-label" for="notRobotCheck">Ben Robot
                                                    Değilim</label>
                                            </div>
                                        </div>
                                        <div class="col-lg-5 offset-lg-1 text-right">
                                            <button type="submit" class="btn btn-primary btn-block">Gönder</button>
                                        </div>
                                    </div>
                                </form>

                            </div>

                        </div>
                        <div class="side side-info side-center">

                            <div class="side-content">

                                <div class="section-title text-center">
                                    <h2>Ücretsiz Demo Hesap Aç</h2>
                                    <p>Risk almadan, sanal para ile Forex piyasasında pratik yapmanın en iyi
                                        yoludur!</p>

                                    <div>
                                        <ul class="side-list">
                                            <li>100.000$ sanal para</li>
                                            <li>Ücretsiz eğitimler</li>
                                            <li>Piyasa analizlerine erişim</li>
                                        </ul>

                                        <a class="btn btn-outline-light" href="open-demo-account.html">
                                            Demo Hesap Aç
                                        </a>

                                    </div>

                                </div>

                            </div>

                        </div>

                    </div>

                </div>



            </div>

            <!-- DEMO PURPOSES ONLY --->

            <div class="row">

                <div class="col-lg-12 col-md-12 col-sm-12">

                    <div class="section-title mt-5 text-center">
                        <h2>Form Status Examples</h2>
                        <p>
                            Check and apply different statuses for server side response
                        </p>
                    </div>

                    <div class="form-block-container">

                        <div class="side">

                            <div class="side-content">

                                <div class="result result-success text-center">
                                    <div class="section-title">
                                        <h2 class="">Gerçek Hesap Aç</h2>
                                    </div>

                                    <div class="result-img">
                                        <img src="images/action_success.svg" />
                                        <span class="result-text">Başarılı!</span>
                                    </div>

                                    <div class="message">
                                        İşleminiz başarı ile gerçekleşti. <br>
                                        Aşağıdaki Butona Tıklayarak Hesabınıza giriş yapabilirsiniz.

                                        <a href="javascript:;" class="btn btn-primary">Giriş Yap</a>

                                    </div>

                                </div>

                            </div>


                        </div>
                        <div class="side side-center">

                            <div class="result result-error text-center">
                                <div class="section-title">
                                    <h2 class="">Gerçek Hesap Aç</h2>
                                </div>

                                <div class="result-img">
                                    <img src="images/action_error.svg" />
                                    <span class="result-text">Hata!</span>
                                </div>

                                <div class="message">
                                    Beklenmedik bir hata oluştu <br>
                                    Lütfen tekrar deneyin

                                    <a href="javascript:;" class="btn btn-primary">Tekrar Dene</a>

                                </div>

                            </div>

                        </div>

                    </div>

                </div>

            </div>

            <!-- END DEMO PURPOSES -->

        </div>

    </section>

    <!-- include register steps component --->
    {% include "./layouts/components/register-steps.twig" %}
    <!-- end include register steps component --->

    <!-- include footer -->
    {% include "./layouts/footer.twig" %}
    <!-- include footer -->

{% endblock %}