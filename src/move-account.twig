{% extends "layouts/base.twig" %}

{% block page_content %}

    <section class="content-slider slider-small">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

                    <div class="slider-content">

                        <div class="section-title">
                            <h2>Hesabınızı Taşıyın</h2>
                            <p>
                                Hesabınızı ÇarşıFX’e taşıyarak sınırsız ayrıcalıklardan yararlanma imkanına sahip olabilirsiniz.
                            </p>
                        </div>

                    </div>

                </div>
            </div>
        </div>
        <div class="slider-image" style="background:url('./images/banner_move_account.png') no-repeat;"></div>
    </section>

    <section class="page-contact-content">

        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

                    <div class="section-title text-center">
                        <h2>Hesabınızı ÇarşıFX’e taşıyın ve kazanmaya başlayın</h2>
                        <p>
                            Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud
                        </p>
                    </div>

                </div>
            </div>
        </div>

    </section>

    <section class="page-form-container mt-4">

        <div class="container">

            <div class="row">

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

                    <div class="form-block-container">

                        <div class="side">

                            <div class="form-container">



                                <form method="post" action="?" id="siteForm">
                                    <div class="form-row">
                                        <div class="col-lg-8 offset-lg-4">
                                            <h2 class="form-title">Hesabımı Taşı</h2>
                                        </div>
                                    </div>

                                    <div class="form-row">
                                        <div class="col-lg-4">
                                            <span class="required">*</span>
                                            İsim
                                        </div>
                                        <div class="col-lg-8 less-padding">
                                            <input
                                                    placeholder="İsim Soyisim"
                                                    type="text" class="form-control js-form-control"
                                                    data-required="true"
                                                    data-min="5"
                                                    name="nameSurname"
                                            />
                                        </div>
                                    </div>


                                    <div class="form-row">
                                        <div class="col-lg-4">
                                            <span class="required">*</span>
                                            E-Posta
                                        </div>
                                        <div class="col-lg-8">
                                            <input type="email"
                                                   name="email"
                                                   placeholder="E-mail"
                                                   data-required="true"
                                                   data-validation="email"
                                                   class="form-control js-form-control"/>
                                        </div>
                                    </div>

                                    <div class="form-row">
                                        <div class="col-lg-4">
                                            <span class="required">*</span>
                                            Telefon
                                        </div>
                                        <div class="col-lg-8">
                                            <input
                                                    name="phone"
                                                    placeholder="05XXXXXXXX"
                                                    maxlength="11"
                                                    type="tel" data-required="true"
                                                    class="form-control js-form-control"/>
                                        </div>
                                    </div>

                                    <div class="form-row">
                                        <div class="col-lg-12">
                                            <div class="form-group form-check">
                                                <input type="checkbox" class="form-check-input js-form-control"
                                                       id="exampleCheck1" data-required="true">
                                                <label class="form-check-label" for="exampleCheck1">Çarşı FX’den
                                                    elektronik ileti almayı, kullanım koşullarını, kişisel verilerin
                                                    işlenmesine ilişkin aydınlatma metni ve izin Formu’nu kabul
                                                    ediyorum.</label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-row">
                                        <div class="col-lg-6">
                                            <div class="form-group form-check">
                                                <!--
                                                <div class="g-recaptcha" data-sitekey="6LcmlLUZAAAAAE3UFNQ3K5mxvUHMsekb495Wyzkh"></div>
                                                -->
                                                <input type="checkbox" class="form-check-input" id="notRobotCheck">
                                                <label class="form-check-label" for="notRobotCheck">Ben Robot
                                                    Değilim</label>
                                            </div>
                                        </div>
                                        <div class="col-lg-5 offset-lg-1 text-right">
                                            <button type="submit" class="btn btn-primary btn-block">Gönder</button>
                                        </div>
                                    </div>
                                </form>

                            </div>

                        </div>
                        <div class="side side-center" style="background: url('images/contact_bg.png');">

                            <div class="side-content side-contact">

                                <div class="section-title">
                                    <h2>İletişim Bilgilerimiz</h2>
                                    <p>Aşağıdaki iletişim kanallarından 5 gün 24 saat bize ulaşabilir ve mesajınızı bizimle paylaşabilirsiniz.</p>
                                </div>

                                <div class="contact-details">

                                    <ul class="list-unstyled">
                                        <li>
                                            <span class="label">Mail</span>
                                            <a href="mailto://support@carsifx.com">support@carsifx.com</a>
                                        </li>
                                        <li>
                                            <span class="label">Telefon</span>
                                            <a href="tell://0090212000000">+971 4 294 1392</a>
                                        </li>
                                        <li>
                                            <span class="label">Adres</span>
                                            <a href="ajavascript:;">Business Center,Street # 8, 25th Flooer, Near Deira City Centre Dubai - Dubai - United Arab Emirates</a>
                                        </li>
                                    </ul>

                                </div>

                                <hr />

                                <div class="contact-social">
                                    <a href="javascript:;">
                                        <i class="fa fa-facebook" aria-hidden="true"></i>
                                    </a>
                                    <a href="javascript:;">
                                        <i class="fa fa-twitter" aria-hidden="true"></i>
                                    </a>
                                    <a href="javascript:;">
                                        <i class="fa fa-linkedin" aria-hidden="true"></i>
                                    </a>
                                    <a href="javascript:;">
                                        <i class="fa fa-instagram" aria-hidden="true"></i>
                                    </a>
                                </div>

                            </div>

                        </div>

                    </div>

                </div>

            </div>

        </div>

    </section>

    {% set showPhone = false %}

    <!-- include free membership component -->
    {% include "./layouts/components/free-membership.twig" %}
    <!-- end include free membership component -->

    <!-- include register steps component --->
    {% include "./layouts/components/register-steps.twig" %}
    <!-- end include register steps component --->

    <!-- include footer -->
    {% include "./layouts/footer.twig" %}
    <!-- include footer -->

{% endblock %}